extends layout

block content
  .col-md-10.col-xs-12.offset-md-1
    .card.card-default
      .card-header
        strong=settings.locale.api_title
      .card-body
        p
          em
            | #{settings.locale.api_message}
          hr
          h3=settings.locale.api_calls
          ul
            li
              p
                strong getdifficulty
                br
                em #{settings.locale.api_getdifficulty}.
                br
                a(href=address+'/api/getdifficulty')=address +'/api/getdifficulty'
            li
              p
                strong getconnectioncount
                br
                em Returns the number of connections the block explorer has to other nodes.
                br
                a(href=address+'/api/getconnectioncount')=address +'/api/getconnectioncount'
            li
              p
                strong getmasternodecount
                br
                em Returns the total number of master nodes on the network.
                br
                a(href=address+'/api/getmasternodecount')=address +'/api/getmasternodecount'
            li
              p
                strong getblockcount
                br
                em Returns the current block index.
                br
                a(href=address+'/api/getblockcount')=address +'/api/getblockcount'
            li
              p
                strong getblockhash [index]
                br
                em Returns the hash of the block at ; index 0 is the genesis block.
                br
                a(href=address+'/api/getblockhash?index=' + hashes.blockindex)=address +'/api/getblockhash?index=' + hashes.blockindex
            li
              p
                strong getblock [hash]
                br
                em Returns information about the block with the given hash.
                br
                a(href=address+'/api/getblock?hash=' + hashes.blockhash)
                  | #{address}/api/getblock?hash=#{hashes.blockhash}
            li
              p
                strong getrawtransaction [txid] [decrypt]
                br
              em
                | Returns raw transaction representation for given transaction id. decrypt can be set to 0(false) or 1(true).
              br
              a(href=address+'/api/getrawtransaction?txid='+ hashes.txhash +'&decrypt=0')
                | #{address}/api/getrawtransaction?txid=#{hashes.txhash}&decrypt=0
              br
              a(href=address+'/api/getrawtransaction?txid='+ hashes.txhash +'&decrypt=1')
                | #{address}/api/getrawtransaction?txid=#{hashes.txhash}&decrypt=1
          ul
            li
              strong getnetworkhashps
              br
              em Returns the current network hashrate. (hash/s)
              br
              a(href=address+'/api/getnetworkhashps')=address +'/api/getnetworkhashps'
          hr
          h3 Extended API
          p
            em Return data from local indexes
          ul
            li
              p
                strong getmoneysupply
                br
                em Returns current money supply
                br
                a(href=address+'/ext/getmoneysupply')=address +'/ext/getmoneysupply'
            li
              p
                strong getdistribution
                br
                em Returns wealth distribution stats
                br
                a(href=address+'/ext/getdistribution')=address +'/ext/getdistribution'
            li
              p
                strong getaddress (/ext/getaddress/hash)
                br
                em Returns information for given address
                br
                a(href=address+'/ext/getaddress/'+hashes.address)=address +'/ext/getaddress/'+hashes.address
            li
              p
                strong getbalance (/ext/getbalance/hash)
                br
                em Returns current balance of given address
                br
                a(href=address+'/ext/getbalance/'+hashes.address)=address +'/ext/getbalance/'+hashes.address
            li
              p
                strong getlasttxs (/ext/getlasttxs/count/min)
                br
                em Returns last [count] transactions greater than [min]
                br
                em Note: returned values are in satoshis
                br
                a(href=address+'/ext/getlasttxs/10/100')=address +'/ext/getlasttxs/10/100'
          hr
          h3 Linking (GET)
          p
            em Linking to the block explorer
          ul
            li
              p
                strong transaction (/tx/txid)
                br
                a(href=address+'/tx/'+hashes.txhash)
                  | #{address}/tx/#{hashes.txhash}
            li
              p
                strong block (/block/hash)
                br
                a(href=address+'/block/'+hashes.blockhash)
                  | #{address}/block/#{hashes.blockhash}
            li
              p
                strong address (/address/hash)
                br
                a(href=address+'/address/'+hashes.address)=address +'/address/'+hashes.address
            li
              p
                strong qrcode (/qr/hash)
                br
                a(href=address+'/qr/'+hashes.address)=address +'/qr/'+hashes.address