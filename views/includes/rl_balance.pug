.card.card-default
  .card-header
    h3.card-title=t('richlist.balance_top',{top : 100}) 
  table.table.table-hover.table-bordered(cellspacing="0")
    thead
      tr
        th(style='text-align:center;') 
          span.fa.fa-flag-checkered
        th=t('richlist.address')
        th.d-none=t('richlist.balance_coin',{coin : settings.symbol})
        th.d-none(style='text-align:center;')=t('richlist.percent_symbol')
    tbody
      - var count = 0
      each item in balance
        - count = count + 1
        - var itemFixed = item.balance / 100000000
        - var percentage = (itemFixed / stats.supply) * 100
        tr
          td(style='text-align:center;') 
            =count
          td 
            a(href='/address/'+ item.a_id)=item.a_id
            include ./rl_labels.pug
          td.d-none
            =itemFixed.toFixed(settings.decimal_places)
          td.d-none(style='text-align:center;') 
            =percentage.toFixed(2)