.card.card-default
  .card-header
    h3.card-title=t('richlist.received_top',{top : 100})
  table.table.table-hover.table-bordered(cellspacing="0")
    thead
      tr
        th(style='text-align:center;') 
          span.fa.fa-flag-checkered
        th=t('richlist.address')
        th.d-none=t('richlist.received_coin',{coin : settings.symbol})
    tbody
      - var count = 0
      each item in received
        - count = count + 1
        - var itemFixed = item.received / 100000000
        tr
          td(style='text-align:center;') 
            =count
          td
            a(href='/address/'+ item.a_id)
              if typeof(item.name) !== "undefined"
                =item.name
              else
                =item.a_id
          td.d-none
            =itemFixed.toFixed(settings.decimal_places)